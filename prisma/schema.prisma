datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_WRITER")
}

generator client {
  provider = "prisma-client-js"
}

model WriteTask {
  id        String   @id @default(uuid())
  tenantId  String
  brief     String
  tone      String?
  audience  String?
  status    String   @default("queued")
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId, createdAt])
}
